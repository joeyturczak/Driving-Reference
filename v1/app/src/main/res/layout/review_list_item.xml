<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:minHeight="?attr/listPreferredItemHeight"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:focusable="true"
              android:background="@drawable/main_list_selector"
              android:layout_height="?attr/listPreferredItemHeight">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:paddingStart="@dimen/manual_list_item_padding"
        android:paddingEnd="@dimen/manual_list_item_padding"
        style="@style/IconImageView"
        android:contentDescription="@string/driver_manual_icon_content_description"
        android:id="@+id/review_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_name"
        android:textColor="@color/black"
        android:textSize="@dimen/manual_list_item_text_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:gravity="end"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/manual_list_item_text_size"/>

</LinearLayout>