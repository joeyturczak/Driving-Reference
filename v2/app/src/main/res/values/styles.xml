<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MainFragmentStyle">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ReviewFragmentStyle">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ReviewDetailFragmentStyle">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TestFragmentStyle">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="IconImageView">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="CollapsedAppBar" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="SpinnerTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="AppBarLayout">
        <item name="android:layout_height">220dp</item>
    </style>

    <style name="TestButtonStyle">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitleExpanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">22sp</item>
    </style>

</resources>
